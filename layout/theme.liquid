<style>
/* Tabs CSS */
.tab-container { display: flex; margin-top: 20px; flex-wrap: wrap; gap: 5px; }
.tab-button { padding: 10px 20px; cursor: pointer; border-radius: 5px 5px 0 0; font-weight: bold; background-color: #f7f7f7; }
.tab-button.active { background-color: #fff; border-bottom: 3px solid #F4762D; }
.tab-content { display: none; margin-top: 10px; }
.tab-content.active { display: block; }

/* Nested tabs spacing */
.nested-tab-container .tab-button { padding: 8px 12px; }

/* Table container */
.table-container { overflow-x: auto; margin-top: 15px; }

/* Responsive */
@media(max-width:768px) { .tab-button { padding: 6px 10px; font-size: 14px; } }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  initTopLevelTabs();
  initNestedTabs();
});

// Top-Level Tabs
function initTopLevelTabs() {
  const container = document.getElementById("mens-womens-tab-container");
  const tabs = container.querySelectorAll(".tab-button");

  tabs.forEach(tab => {
    tab.addEventListener("click", () => {
      const targetId = tab.dataset.tab;
      if (!targetId) return;

      // Deactivate all tabs
      tabs.forEach(t => t.classList.remove("active"));
      tab.classList.add("active");

      // Deactivate all top-level contents
      document.querySelectorAll("#general-content-container > .tab-content").forEach(tc => tc.classList.remove("active"));

      // Activate target content
      const targetContent = document.getElementById(targetId);
      if (targetContent) targetContent.classList.add("active");
    });
  });
}

// Nested Tabs
function initNestedTabs() {
  const nestedContainers = document.querySelectorAll(".nested-tab-container");

  nestedContainers.forEach(container => {
    const tabs = container.querySelectorAll(".tab-button");

    tabs.forEach(tab => {
      tab.addEventListener("click", () => {
        const targetId = tab.dataset.tab;
        if (!targetId) return;

        // Deactivate sibling tabs
        tabs.forEach(t => t.classList.remove("active"));
        tab.classList.add("active");

        // Deactivate nested content in the same parent
        const parentContent = container.closest(".tab-content");
        if (!parentContent) return;
        parentContent.querySelectorAll(":scope > .tab-content").forEach(tc => tc.classList.remove("active"));

        // Activate target nested content
        const targetContent = document.getElementById(targetId);
        if (targetContent) targetContent.classList.add("active");
      });
    });
  });
}
</script>


